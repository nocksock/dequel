{
  "name": "dequel-editor",
  "version": "0.4.0",
  "description": "CodeMirror-based editor for Dequel query language",
  "type": "module",
  "main": "./dist/dequel-editor.js",
  "module": "./dist/dequel-editor.js",
  "exports": {
    ".": "./dist/dequel-editor.js",
    "./lang": {
      "import": "./dist/dequel-lang.js",
      "types": "./dist/dequel-lang.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "codemirror",
    "editor",
    "query-language",
    "dequel",
    "phoenix",
    "elixir"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nocksock/dequel.git",
    "directory": "editor"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "pnpm i18n:build && pnpm build:full && pnpm build:lang",
    "build:full": "BUILD_MODE=full vite build",
    "build:lang": "BUILD_MODE=lang vite build",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:wtr": "web-test-runner test/**/*.test.{js,ts}",
    "prepublishOnly": "pnpm build",
    "i18n:build": "tsx scripts/po2json.ts"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/lint": "^6.9.3",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.12",
    "@lezer/common": "^1.5.0",
    "@lezer/generator": "^1.8.0",
    "@lezer/highlight": "^1.2.3",
    "@lezer/lr": "^1.4.8",
    "@preact/preset-vite": "^2.10.3",
    "@preact/signals": "^1.3.3",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.20",
    "@types/lodash-es": "^4.17.12",
    "@uidotdev/usehooks": "^2.4.1",
    "axios": "^1.13.4",
    "codemirror": "^6.0.2",
    "htm": "^3.1.1",
    "lodash-es": "^4.17.23",
    "lucide-react": "^0.396.0",
    "preact": "^10.28.3",
    "preact-custom-element": "^4.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite-plugin-inspect": "^0.8.9"
  },
  "devDependencies": {
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@types/axios": "^0.14.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.31",
    "@types/preact-custom-element": "^4.0.4",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@web/dev-server-esbuild": "^1.0.5",
    "@web/test-runner": "^0.20.2",
    "autoprefixer": "^10.4.24",
    "daisyui": "^5.5.17",
    "eslint": "^8.57.1",
    "gettext-parser": "^8.0.0",
    "http-proxy-middleware": "^3.0.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.4",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.1"
  },
  "peerDependencies": {
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "@codemirror/state": {
      "optional": true
    },
    "@codemirror/view": {
      "optional": true
    }
  }
}
